
<h1>Post a review for <%= @restaurant.name %></h1>

<h3>Rate the restaurant (from 1 to 5) and tell us what you thought!</h3>

<div class="row">
  <% if @review.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @review.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :rating %>
  <%= f.text_area :rating %>
  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit "Submit review" %>
<% end %>
